<theme defaultView="grid">
	<formatVersion>7</formatVersion>
	
	<variables>
		<mainFont>./../fonts/mania.ttf</mainFont>
	</variables>


	<view name="system">
	<text name="system_name_1" extra="true">
		<text>${system.fullName}</text>
		<size>0.743 0.015</size>
		<pos>0.06 0.08</pos>
		<origin>0 0</origin>
		<fontSize>0.045</fontSize>
		<alignment>left</alignment>
		<fontPath>${mainFont}</fontPath>
	</text>

	<image name="arrowblock" extra="true">
		<pos>0.015 0.058</pos>
		<path>./../_art/assets/arrow_block.svg</path>
		<size>0.033 0.057</size>
		<origin>0 0</origin>
	</image>	
	</view>


	<feature supported="carousel">
	<view name="system">
	<carousel name="systemcarousel">
		<type>horizontal</type>
		<pos>0 0</pos> 
		<size>1 1</size> 
		<color>00000000</color>
		<logoScale>1</logoScale>
		<logoSize>0.45 0.45</logoSize>
		<maxLogoCount>3</maxLogoCount>
		<scrollSound>./../_art/sounds/scroll.wav</scrollSound>
	</carousel>

	<text name="systemInfo">
		<backgroundColor>dddddd00</backgroundColor>
		<forceUppercase>0</forceUppercase>
		<fontSize>0.03</fontSize>
		<pos>0.50 0.75</pos>
		<origin>0.5 0.5</origin>
		<forceUppercase>0</forceUppercase>
		<fontPath>${mainFont}</fontPath>
	</text>
	</view>
	</feature>


</theme>