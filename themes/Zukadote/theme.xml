		<include name="blue_05">./_art/background/blue_05.xml</include>
		<include name="blue_06">./_art/background/blue_06.xml</include>
		<include name="blue_07">./_art/background/blue_07.xml</include>
		<include name="cream_coffee">./_art/background/cream_coffee.xml</include>
		<include name="green_01">./_art/background/green_01.xml</include>
		<include name="green_02">./_art/background/green_02.xml</include>
		<include name="green_03">./_art/background/green_03.xml</include>
		<include name="green_04">./_art/background/green_04.xml</include>
		<include name="green_05">./_art/background/green_05.xml</include>
		<include name="green_06">./_art/background/green_06.xml</include>
		<include name="green_07">./_art/background/green_07.xml</include>
		<include name="green_08">./_art/background/green_08.xml</include>
		<include name="green_09">./_art/background/green_09.xml</include>
		<include name="green_10">./_art/background/green_10.xml</include>
		<include name="grey_01">./_art/background/grey_01.xml</include>
		<include name="grey_02">./_art/background/grey_02.xml</include>
		<include name="grey_03">./_art/background/grey_03.xml</include>
		<include name="grey_04">./_art/background/grey_04.xml</include>
		<include name="grey_05">./_art/background/grey_05.xml</include>
		<include name="light_01">./_art/background/light_01.xml</include>
		<include name="orange_01">./_art/background/orange_01.xml</include>
		<include name="orange_02">./_art/background/orange_02.xml</include>
		<include name="pink_01">./_art/background/pink_01.xml</include>
		<include name="pink_02">./_art/background/pink_02.xml</include>
		<include name="pink_03">./_art/background/pink_03.xml</include>
		<include name="pink_blue_01">./_art/background/pink_blue_01.xml</include>
		<include name="purple_01">./_art/background/purple_01.xml</include>
