	</subset>

	<!-- MENU DE MENU -->
	<subset name="menuview" displayName="${menuview}">
		<include name="default">./_art/menuview/default.xml</include>
		<include name="blue">./_art/menuview/blue.xml</include>
		<include name="cyan">./_art/menuview/cyan.xml</include>
		<include name="green">./_art/menuview/green.xml</include>
		<include name="grey">./_art/menuview/grey.xml</include>
		<include name="lilas">./_art/menuview/lilas.xml</include>
		<include name="orange">./_art/menuview/orange.xml</include>
		<include name="pink">./_art/menuview/pink.xml</include>
		<include name="red">./_art/menuview/red.xml</include>
		<include name="white">./_art/menuview/white.xml</include>
	</subset>


	<!-- MENU DE TAMANHO -->
	<subset name="systemview" displayName="${systemview}">
		<include name="default">./_art/systemview/default.xml</include>
		<include name="medium">./_art/systemview/medium.xml</include>
		<include name="large">./_art/systemview/large.xml</include>
	</subset>
	


	<!-- MENU DE METADATA -->
	<subset name="gamelistview" displayName="${gamelistview}">
		<include name="w/ Metadata">./_art/gamelistview/withmeta.xml</include>
		<include name="No Metadata">./_art/gamelistview/nometa.xml</include>
		<include name="w/ Description">./_art/gamelistview/withdescription.xml</include>
	</subset>



	<!-- MENU DE GRID -->
	<subset name="Grid Selection" displayName="${gridselection}">
		<include name="Default">./_art/xml/gridcenterselectionwithloop.xml</include>
		<include name="Centered wo/Loop">./_art/xml/gridcenterselection.xml</include>
		<include name="Uncentered w/Loop">./_art/xml/gridloop.xml</include>
		<include name="Uncentered wo/Loop">./_art/xml/gridnoloop.xml</include>
	</subset>
	


	<!-- MENU DE STATUS BAR -->
	<subset name="Top and Bottom Bar" displayName="${tabb}">
		<include name="yes">./_art/xml/topandbottomline.xml</include>
		<include name="no"/>
	</subset>
	


	<!-- MENU DE UPPERCASE -->
	<subset name="Force Uppercase" displayName="${forceupper}">
		<include name="System Name">./_art/xml/forceuppercasesystemname.xml</include>
		<include name="System Name and Gamelist">./_art/xml/forceuppercaseall.xml</include>
		<include name="Gamelist">./_art/xml/forceuppercasegamelist.xml</include>
		<include name="no"/>
	</subset>


	<view name="screen">
     	<batteryIndicator name="batteryIndicator">
     	   	<fontPath>./_art/fonts/mania.otf</fontPath>
     	   	<pos>0.889 0.07</pos>
    		<size>0.05 0.05</size>
    		<color>FFFFFF</color>
     	   	<itemSpacing>0.01</itemSpacing>
     	   	<networkIcon>./_art/svg/wifi-vertical.svg</networkIcon>
     	   	<zIndex>10</zIndex>
     	</batteryIndicator>
		
		<text name="clock">
			<fontPath>${mainFont}</fontPath>
			<fontSize>0.03</fontSize>
			<color>${mainColor}</color>
			<pos>0.93 0.94</pos>
			<size>0.4 0.039</size>
			<fontPath>./_art/fonts/mania.otf</fontPath>
			<alignment>left</alignment>
			<verticalAlignment>center</verticalAlignment>
		</text>
   </view>
	

